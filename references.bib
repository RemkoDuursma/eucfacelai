@Article{Norby1999,
  Title                    = {Tree responses to rising {CO}2 in field experiments: implications for the future forest},
  Author                   = {Norby, R. J. and Wullschleger, S. D. and Gunderson, C. A. and Johnson, D. W. and Ceulemans, R.},
