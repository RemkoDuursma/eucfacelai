@Article{Pook1986,
  Title                    = {Canopy {Dynamics} of {Eucalyptus} maculata {Hook} .{IV}. {Contrasting Responses} to {Two Severe Droughts}},
  Author                   = {Pook, EW},
  Journal                  = {Australian Journal of Botany},
  Year                     = {1986},

  Month                    = jan,
  Number                   = {1},
  Pages                    = {1--14},
