  Doi                      = {10.2307/1939317},
  File                     = {JSTOR Full Text PDF:C\:\\Users\\30022860\\AppData\\Roaming\\Zotero\\Zotero\\Profiles\\m3aehzfx.default\\zotero\\storage\\9KEIISZI\\Joffre and Rambal - 1993 - How Tree Cover Influences the Water Balance of Med.pdf:application/pdf},
