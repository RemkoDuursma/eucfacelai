@Article{Tang2014,
  Title                    = {Deriving and validating {Leaf Area Index} ({LAI}) at multiple spatial scales through lidar remote sensing: {A} case study in {Sierra National Forest}, {CA}},
  Author                   = {Tang, Hao and Brolly, Matthew and Zhao, Feng and Strahler, Alan H. and Schaaf, Crystal L. and Ganguly, Sangram and Zhang, Gong and Dubayah, Ralph},
