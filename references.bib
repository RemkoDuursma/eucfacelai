  File                     = {ScienceDirect Full Text PDF:C\:\\Users\\30022860\\AppData\\Roaming\\Zotero\\Zotero\\Profiles\\m3aehzfx.default\\zotero\\storage\\V77W5TQ6\\Niinemets and Keenan - Photosynthetic responses to stress in Mediterranea.pdf:application/pdf;ScienceDirect Snapshot:C\:\\Users\\30022860\\AppData\\Roaming\\Zotero\\Zotero\\Profiles\\m3aehzfx.default\\zotero\\storage\\Z8BW4ZA2\\S0098847213001925.html:text/html},
