  Author                   = {Muller, Bertrand and Pantin, Florent and G{\'{e}}nard, Michel and Turc, Olivier and Freixes, Sandra and Piques, Maria and Gibon, Yves},
  Journal                  = {Journal of Experimental Botany},
  Year                     = {2011},

